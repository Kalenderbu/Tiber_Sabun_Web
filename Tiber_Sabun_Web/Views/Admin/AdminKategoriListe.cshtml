@{
    ViewBag.Title = "Liste";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <script>
        $(document).ready(function () {
            $("#Uyari").fadeOut(5500);
        });
    </script>
    @{
        if (TempData["KayitOnay"] != null)
        {
            <div class="col-sm-4">
            </div>
            <div id="Uyari" class="col-sm-4 ">
                <div class="w3-center w3-animate-top position-absolute text-center alert alert-success align-bottom">
                    @TempData["KayitOnay"]
                </div>
            </div>
            <div class="col-sm-4">
            </div>
        }
        if (TempData["SilmeUyari"] != null)
        {
            <div class="col-sm-4">
            </div>
            <div id="Uyari" class="col-sm-4 ">
                <div class="w3-center w3-animate-top position-absolute text-center alert alert-danger align-bottom">
                    @TempData["SilmeUyari"]
                </div>
            </div>
            <div class="col-sm-4">
            </div>
        }
    }
</div>
<div class="col-12 col-md-6 order-md-1 order-last">
    <h3>Kategori Listesi</h3>
</div>
<div class="page-heading">
    <table class="table table-striped table-bordered table-hover" id="siralanacakTablo">
        <thead>
            <tr class="table-dark">
                <td>Kategori Adı</td>
                <td>Açıklama</td>
                <td>Kayıt Tarihi</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr class="table-light">
                        <td>@item.Adi </td>
                        <td>@item.Aciklama</td>
                        <td>
                            @{
                                string tarih = String.Format("{0:dd MMMM yyyy}", item.KayitTarihi);
                                @tarih
                            }
                        </td>
                        <td class="text-center pr-1 pl-1 ">
                            <a class="me-4" title="@item.Adi kategorisini düzenle" asp-controller="Admin" asp-action="AdminKategoriDuzelt" asp-route-id="@item.KategoriID">
                                <span class="badge bg-primary"><span class="bi bi-pencil-square"></span> Düzenle </span>
                            </a>
                            <a title="@item.Adi kategorisini sil" asp-controller="Admin" asp-action="KategoriSil" asp-route-id="@item.KategoriID">
                                <span class="bg-danger badge"><span class="bi bi-trash"></span> Sil </span>
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
