@{
    ViewBag.Title = "Ürün Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-heading">
    <div class="row match-height">
        <div class="col-md-6 col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Ürün Ekleme</h4>
                </div>
                <div class="card-content">
                    <div class="card-body">
                        @using (Html.BeginForm("AdminUrunEkle", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form form-vertical" }))
                        {
                            <div class="form-body">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="form-group has-icon-left">
                                            <label for="Adi">Ürün Adı</label>
                                            <div class="position-relative">
                                                <input type="text" class="form-control"
                                                   placeholder="Ürün Adını Giriniz"
                                                   name="Adi"
                                                   id="Adi"
                                                   required>
                                                <div class="form-control-icon">
                                                    <i class="bi bi-pen"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group select-border has-icon-left">
                                            <label for="KategoriID">Kategori</label>
                                            <div class="position-relative">
                                                <select class="form-control basic-select" id="KategoriID" name="KategoriID" required>
                                                    <option value="@null">Seçiniz</option>
                                                    @foreach (var item in Model)
                                                    {
                                                        <option value="@item.KategoriID">@item.Adi</option>
                                                    }
                                                </select>
                                                <div class="form-control-icon">
                                                    <i class="bi bi-arrow-down-square"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group has-icon-left">
                                            <label for="Aciklama">Ürün Açıklaması</label>
                                            <div class="position-relative">
                                                <textarea type="text" class="form-control"
                                                      placeholder="Açıklama Giriniz"
                                                      name="Aciklama"
                                                      id="Aciklama"
                                                      required></textarea>
                                                <div class="form-control-icon">
                                                    <i class="bi bi-pen"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group has-icon-left">
                                            <label for="Fiyat">Fiyatı</label>
                                            <div class="position-relative">
                                                <input type="text" class="form-control"
                                                   placeholder="Fiyat giriniz"
                                                   name="Fiyat"
                                                   id="Fiyat"
                                                   required>
                                                <div class="form-control-icon">
                                                    <i class="bi bi-pen"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group has-icon-left">
                                            <label for="StokAdeti">Stok Adeti</label>
                                            <div class="position-relative">
                                                <input type="number" class="form-control"
                                                   placeholder="Stok Adeti giriniz"
                                                   name="StokAdeti"
                                                   id="StokAdeti"
                                                   required>
                                                <div class="form-control-icon">
                                                    <i class="bi bi-pen"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group has-icon-left">
                                            <label for="KullanilanYaglar">Üründe Kullanılan Yağlar <br>(yağların isimlerini virgül ile ayırın)</label>
                                            <div class="position-relative">
                                                <textarea type="text" class="form-control"
                                                      placeholder="Hani yağlar kullanıldı"
                                                      name="KullanilanYaglar"
                                                      id="KullanilanYaglar"
                                                      required></textarea>
                                                <div class="form-control-icon">
                                                    <i class="bi bi-pen"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group has-icon-right">
                                            <label for="Dosya">Ürün fotoğrafları <br>(Seçilen ilk fotoğraf ürünün kapak fotoğrafı olacaktır.)</label>
                                            <div class="input-group file-upload">
                                                <input type="file" class="form-control multiple" accept="~/UrunResimleri/*" multiple id="Dosya" name="Dosya" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group has-icon-left">
                                            <label for="VideoLink">Ürün video linki</label>
                                            <div class="position-relative">
                                                <input type="text" class="form-control"
                                                   placeholder="Video Yerleştirme (Embed) Linki"
                                                   name="VideoLink"
                                                   id="VideoLink">
                                                <div class="form-control-icon">
                                                    <i class="bi bi-pen"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12 d-flex justify-content-end">
                                        <a class="btn btn-primary me-1 mb-1" href="@Url.Action("AdminUrunListe","Admin")">Listele</a>
                                        <button type="submit"
                                            class="btn btn-primary me-1 mb-1">
                                            Kaydet
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


