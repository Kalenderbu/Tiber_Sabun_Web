<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,height=device-height initial-scale=1.0" />
    <title>Admin Yönetim</title>

    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700;800&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/admin/assets/css/bootstrap.css">
    <link rel="stylesheet" href="~/Content/admin/assets/vendors/iconly/bold.css" />
    <link rel="stylesheet" href="~/Content/admin/assets/vendors/perfect-scrollbar/perfect-scrollbar.css" />
    <link rel="stylesheet" href="~/Content/admin/assets/vendors/bootstrap-icons/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/Content/admin/assets/css/app.css" />
    <link rel="shortcut icon" href="~/Content/admin/assets/images/favicon.svg" type="image/x-icon" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link rel="canonical" href="https://getbootstrap.com/docs/4.2/examples/carousel/">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap5.min.js"></script> <!-- Bootstrap 5 ile uyumlu çalışabilmesi için ekledik -->
    <script>
        $(document).ready(function () {
            var tablom = $("#siralanacakTablo");
            tablom.DataTable({
                language: {
                    "sDecimal": ",",
                    "sEmptyTable": "Tabloda herhangi bir veri mevcut değil!",
                    "sInfo": "_START_. kayıt ile _END_. kayıt arasındaki kayıtlar gösteriliyor. (Toplam _TOTAL_ kayıt var)",
                    "sInfoEmpty": "Kayıt yok!",
                    "sInfoFiltered": "(_MAX_ kayıt içerisinden bulunan)",
                    "sInfoPostFix": "",
                    "sInfoThousands": ".",
                    "sLengthMenu": "Her sayfada _MENU_ adet kayıt göster",
                    "sLoadingRecords": "Yükleniyor...",
                    "sProcessing": "İşleniyor...",
                    "sSearch": "<b>Tabloda Ara</b>",
                    "sZeroRecords": "Eşleşen kayıt bulunamadı!",
                    "oPaginate": {
                        "sFirst": "İlk",
                        "sLast": "Son",
                        "sNext": "Sonraki",
                        "sPrevious": "Önceki"
                    },
                    "oAria": {
                        "sSortAscending": ": artan sütun sıralamasını aktifleştir",
                        "sSortDescending": ": azalan sütun sıralamasını aktifleştir"
                    },
                    "select": {
                        "rows": {
                            "_": "%d kayıt seçildi.",
                            "0": "Herhangi bir kayıt seçilmedi.",
                            "1": "1 kayıt seçildi."
                        }
                    }
                }
            });
        });
    </script>

</head>
<body>
    <div id="app">
        <div id="sidebar" class="active">
            <div class="sidebar-wrapper active">
                <div class="sidebar-header ">
                    <div class="d-flex justify-content-between" style="display:block;margin-left:auto;margin-right:auto; width:50%;">
                        <div class="logo ">
                            <a href="/Admin/AdminIndex">
                                Tiber
                                <i class="bi bi-sun text-warning pt-0 ps-2 btn-lg " style="position:absolute; padding-top:2%; vertical-align:bottom; "></i>
                                <i class="bi bi-water text-primary ps-2 btn-lg" style="position:absolute; padding-top:5%; vertical-align:bottom; "></i>
                            </a>
                        </div>
                        <div class="toggler">
                            <a href="#" class="sidebar-hide d-xl-none d-block"><i class="bi bi-x bi-middle"></i></a>
                        </div>
                    </div>
                </div>
                <div class="sidebar-menu">
                    <ul class="menu">
                        @*Admin Dashboard*@
                        <li class="sidebar-item  ">
                            <a href="/Admin/AdminIndex" class='sidebar-link'>
                                <i class="bi bi-grid-fill"></i>
                                <span>Yönetim</span>
                            </a>
                        </li>
                        @*ilan yönetimi*@
                        <li class="sidebar-item  has-sub">
                            <a href="#" class='sidebar-link'>
                                <i class="bi bi-stack"></i>
                                <span>Ürün Yönetim</span>
                            </a>
                            <ul class="submenu ">
                                <li class="submenu-item ">
                                    <a href="/Admin/AdminUrunListe">Ürün Listesi</a>
                                </li>
                                <li class="submenu-item ">
                                    <a href="/Admin/AdminUrunEkle">Yeni Ürün Ekle</a>
                                </li>
                            </ul>
                        </li>
                        @*Kategori yönetimi*@
                        <li class="sidebar-item  has-sub">
                            <a href="#" class='sidebar-link'>
                                <i class="bi bi-stack"></i>
                                <span>Kategori Yönetimi</span>
                            </a>
                            <ul class="submenu ">
                                <li class="submenu-item ">
                                    <a href="/Admin/AdminKategoriListe">Liste</a>
                                </li>
                                <li class="submenu-item ">
                                    <a href="/Admin/AdminKategoriEkle">Yeni Kategori</a>
                                </li>
                            </ul>
                        </li>
                        @*Sıkça Sorulan Sorular yönetimi*@
                        <li class="sidebar-item  has-sub">
                            <a href="#" class='sidebar-link'>
                                <i class="bi bi-stack"></i>
                                <span>Sıkça Sorulan Sorular Yönetimi</span>
                            </a>
                            <ul class="submenu ">
                                <li class="submenu-item ">
                                    <a href="/Admin/AdminSikcaSorulanSorularListe">Liste</a>
                                </li>
                                <li class="submenu-item ">
                                    <a href="/Admin/AdminSikcaSorulanSorularEkle">Yeni Soru</a>
                                </li>
                                <li class="submenu-item ">
                                    <a href="/Admin/AdminGelenSoruListe">Gelen Sorular</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    <a class="btn btn-success container-fluid" style="position: absolute;bottom: 0;" href="/Home/Index">Siteye Git</a>
                </div>
                <button class="sidebar-toggler btn x"><i data-feather="x"></i></button>
            </div>
        </div>
        <div id="main">
            <header class="mb-3">
                <a href="#" class="burger-btn d-block d-xl-none">
                    <i class="bi bi-justify fs-3"></i>
                </a>
            </header>
            @RenderBody()
            <footer>
                <div class="footer clearfix mb-0 text-muted text-center">
                    <p>
                        <span class="text-primary text-center"><i class="bi bi-pencil-square"></i></span> Mustafa KALENDER tarafından yapıldı.
                    </p>
                </div>
            </footer>
        </div>
    </div>
    <script src="~/Content/admin/assets/vendors/perfect-scrollbar/perfect-scrollbar.min.js"></script>
    <script src="~/Content/admin/assets/js/bootstrap.bundle.min.js"></script>

    <script src="~/Content/admin/assets/vendors/apexcharts/apexcharts.js"></script>
    <script src="~/Content/admin/assets/js/pages/dashboard.js"></script>

    <script src="~/Content/admin/assets/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>